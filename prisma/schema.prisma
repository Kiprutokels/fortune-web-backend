// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model NavItem {
  id          String        @id @default(cuid())
  name        String
  key         String        @unique
  href        String?
  position    Int
  isActive    Boolean       @default(true)
  hasDropdown Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  dropdowns   DropdownData[]

  @@map("nav_items")
}

model DropdownData {
  id          String          @id @default(cuid())
  navItemId   String          @unique
  title       String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  navItem     NavItem         @relation(fields: [navItemId], references: [id], onDelete: Cascade)
  items       DropdownItem[]

  @@map("dropdown_data")
}

model DropdownItem {
  id             String       @id @default(cuid())
  dropdownDataId String
  name           String
  href           String
  description    String       @db.Text
  features       Json?
  position       Int
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  dropdownData   DropdownData @relation(fields: [dropdownDataId], references: [id], onDelete: Cascade)

  @@map("dropdown_items")
}

model ThemeConfig {
  id           String   @id @default(cuid())
  primaryColor String   @default("#3b82f6")
  accentColor  String   @default("#f97316")
  logoUrl      String?
  companyName  String   @default("Fortune Technologies")
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("theme_config")
}

model HeroDashboard {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  stats       Json
  features    Json
  imageUrl    String?
  position    Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("hero_dashboards")
}

model HeroContent {
  id               String   @id @default(cuid())
  trustBadge       String   @default("Trusted by 5,000+ Companies")
  mainHeading      String   @default("Transform Your")
  subHeading       String   @default("HR Operations")
  tagline          String   @default("with AI-Powered Solutions")
  description      String   @db.Text
  trustPoints      Json
  primaryCtaText   String   @default("Start Free Trial")
  secondaryCtaText String   @default("Schedule Demo")
  phoneNumber      String   @default("0733769149")
  chatWidgetUrl    String   @default("https://rag-chat-widget.vercel.app/")
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("hero_content")
}

model Service {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String   @db.Text
  shortDesc   String?  @db.Text
  icon        String
  color       String   @default("bg-primary-100 text-primary-600")
  features    Json
  benefits    Json?
  imageUrl    String?
  heroImageUrl String?
  processImageUrl String?
  complianceImageUrl String?
  isActive    Boolean  @default(true)
  onQuote     Boolean  @default(false)
  isFeatured  Boolean  @default(false)
  isPopular   Boolean  @default(false)
  position    Int      @default(0)
  price       String?
  buttonText  String   @default("Learn More")
  buttonLink  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String
  company   String
  content   String   @db.Text
  rating    Int      @default(5)
  avatar    String   @db.Text
  results   Json
  service   String?
  isActive  Boolean  @default(true)
  isFeatured Boolean @default(false)
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("testimonials")
}

model Stat {
  id        String   @id @default(cuid())
  number    String
  label     String
  icon      String?
  color     String   @default("text-primary-600")
  isActive  Boolean  @default(true)
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("stats")
}

model SectionContent {
  id          String   @id @default(cuid())
  sectionKey  String   @unique
  title       String
  subtitle    String?  @db.Text
  description String?  @db.Text
  imageUrl    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("section_contents")
}

model FooterSection {
  id          String       @id @default(cuid())
  title       String
  position    Int
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  links       FooterLink[]

  @@map("footer_sections")
}

model FooterLink {
  id              String        @id @default(cuid())
  footerSectionId String
  name            String
  href            String
  position        Int
  isActive        Boolean       @default(true)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  footerSection   FooterSection @relation(fields: [footerSectionId], references: [id], onDelete: Cascade)

  @@map("footer_links")
}

model ContactInfo {
  id          String   @id @default(cuid())
  type        String
  label       String
  value       String
  icon        String?
  isActive    Boolean  @default(true)
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contact_info")
}

model SocialLink {
  id        String   @id @default(cuid())
  name      String
  icon      String
  href      String
  isActive  Boolean  @default(true)
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("social_links")
}

model PageContent {
  id          String   @id @default(cuid())
  pageKey     String   @unique
  title       String
  subtitle    String?  @db.Text
  description String?  @db.Text
  heroTitle   String?
  heroSubtitle String? @db.Text
  heroDescription String? @db.Text
  heroImageUrl String?
  processImageUrl String?
  complianceImageUrl String?
  ctaText     String?
  ctaLink     String?
  ctaSecondaryText String?
  ctaSecondaryLink String?
  metadata    Json?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("page_contents")
}

model CallToAction {
  id          String   @id @default(cuid())
  pageKey     String
  title       String
  description String?  @db.Text
  primaryText String
  primaryLink String
  secondaryText String?
  secondaryLink String?
  bgColor     String?  @default("bg-gradient-to-r from-blue-600 to-blue-500")
  textColor   String?  @default("text-white")
  position    Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("call_to_actions")
}

model FileUpload {
  id          String   @id @default(cuid())
  filename    String
  originalName String
  mimetype    String
  size        Int
  path        String
  url         String
  uploadedBy  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("file_uploads")
}

model Lead {
  id              String   @id @default(cuid())
  leadType        String   @default("consultation") // contact, demo, consultation
  fullName        String
  email           String
  phone           String?
  company         String?
  serviceInterest String?
  projectDetails  String?  @db.Text
  message         String?  @db.Text
  source          String?  @default("website")
  status          String   @default("new") // new, in_progress, closed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("leads")
}

model ConsultationFormConfig {
  id          String   @id @default(cuid())
  formTitle   String   @default("Request Free Consultation")
  formSubtitle String? @default("Fill out the form and we'll get back to you within 24 hours.")
  fields      Json     // Array of form field configurations
  services    Json     // Array of available services
  submitText  String   @default("Send Message")
  successMessage String @default("Thank you! We'll contact you within 24 hours.")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("consultation_form_configs")
}